{
    "name": "angular4-webpack-seed",
    "version": "1.0.0",
    "description": "Angular4 Seed with Webpack by David Beretta",
    "repository": {
        "type": "git",
        "url": "https://github.com/davidberetta/angular4-webpack-seed.git"
    },
    "main": "./src/main.ts",
    "scripts": {
        "clean": "rimraf dist",
        "build": "rimraf dist && NODE_ENV=dev node node_modules/.bin/webpack",
        "build:prod": "rimraf dist && NODE_ENV=prod node node_modules/.bin/webpack",
        "server:dev": "webpack-dev-server -d --open --progress --profile --watch --inline --hot"
    },
