        "@angular/platform-browser-dynamic": "~4.2.6",
        "@angular/router": "~4.2.6",
        "core-js": "^2.4.1",
        "rxjs": "~5.4.2",
        "zone.js": "~0.8.12"
    },
    "devDependencies": {
        "@angular/compiler-cli": "^4.2.5",
        "@types/core-js": "^0.9.42",
